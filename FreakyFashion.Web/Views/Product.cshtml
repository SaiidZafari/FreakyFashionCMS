@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Product>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    Layout = "Master.cshtml";

    var image = Model.Value<IPublishedContent>("productImage");
}


<div class="row">
    <div class="col-md-5">
        <img class="col-md-10" src="@image.Url()" />
    </div>
    <div class="col-md-5">
        <h1>@Model.Value("productName")</h1>

        <h5 class="mt-3">@Model.Value("productDescription")</h5>

        <h1 class="mt-5">@Model.Value("productPrice") SEK</h1>

        <div class="btn btn-primary mt-5 col-md-6">Add to Cart</div>
    </div>
    
</div>




